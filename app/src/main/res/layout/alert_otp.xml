<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/rl"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/purple_200" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_below="@+id/close">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray2"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="OTP will be sent on your registered email address"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/edit_bg"
            android:padding="@dimen/_4sdp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:hint="@string/enter_email_address"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:focusable="false"
                android:clickable="false"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/dark_gray2"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="end"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:drawableTint="@color/dark_gray2"
            android:drawablePadding="@dimen/_2sdp"
            android:id="@+id/resendotp"
            android:text="Get OTP "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="invisible"
            android:id="@+id/llotp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_200"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:text="Enter 4 Digit OTP"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray2"
                android:id="@+id/textdesc"
                android:text="Please enter the otp code we have sent to email"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="32dp">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/edit1"
                    android:textSize="@dimen/_18sdp"
                    android:inputType="number"
                    android:maxLength="4"
                    android:letterSpacing="1"
                    android:backgroundTint="@color/purple_200"
                    android:textColor="@color/black"
                    android:hint="0000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/time"
                    android:text="00:00"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:drawableTint="@color/white"
                android:id="@+id/veryotp"
                android:textAllCaps="true"
                android:background="@drawable/round_cornor_button"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Verify Otp">
            </Button>




        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
