<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
      android:orientation="vertical"
       android:paddingTop="@dimen/_15sdp"
       android:paddingStart="@dimen/_15sdp"
       android:paddingEnd="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/mystaking"
                android:text="0 BLV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="My Staking"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/myteam"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="My Team"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/directrewards"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="0.00 BLV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Direct Rewards"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/stackingrewards"
                android:text="0.00 BLV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Staking Rewards"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/teamrewards"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="0.00 BLV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Team Rewards"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/totalrewards"
                android:text="0.00 BLV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Total Rewards"/>
        </LinearLayout>

    </LinearLayout>

       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/llgloblestate"
           android:visibility="gone">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_14sdp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_15sdp"
                   android:text="Global State"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_12sdp"
                   android:text="10,790,842"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_9sdp"
                   android:textColor="@color/white"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:text="Total Participants"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_12sdp"
                   android:text="205"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_9sdp"
                   android:textColor="@color/white"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:text="Countries"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_6sdp"
                   android:background="@drawable/homerow_bg"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:text="434,34,23423,3"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Stacked in Pool"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:gravity="end"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:text="$4343,3434,00"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Statcked in Pool (USD)"/>
                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_6sdp"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"

                           android:text="2,232,323,99"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Rewards"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:gravity="end"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:text="$34,232,00"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Rewards (USD)"/>
                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_6sdp"
                   android:background="@drawable/homerow_bg"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:text="1,90,32,32,00"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Withdraws"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:gravity="end"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:text="205"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Withdraws (USD)"/>
                   </LinearLayout>


               </LinearLayout>
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>


       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           app:tint="@color/white"
           android:id="@+id/dropdown"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:layout_margin="@dimen/_15sdp"
            android:id="@+id/addfriend"
            android:padding="10dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawablePadding="4dp"
            android:drawableTint="@color/purple_200"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:text="Add Referral"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:layout_margin="@dimen/_15sdp"
            android:id="@+id/stakemnt"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawablePadding="4dp"
            android:drawableTint="@color/purple_200"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:text="Stake MNT"/>
    </RelativeLayout>



</LinearLayout>