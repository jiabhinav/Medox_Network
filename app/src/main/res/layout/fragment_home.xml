<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/swiprefresh"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/mystaking"
                tools:text="0 MNT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="My Staking"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/myteam"
                android:layout_marginTop="@dimen/_15sdp"
                tools:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="My Team"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/directrewards"
                android:layout_marginTop="@dimen/_15sdp"
                tools:text="0.00 MNT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Direct Rewards"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/stackingrewards"
                tools:text="0.00 MNT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Staking Rewards"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/teamrewards"
                android:layout_marginTop="@dimen/_15sdp"
                tools:text="0.00 MNT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Team Rewards"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/totalrewards"
                tools:text="0.00 MNT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:text="Total Rewards"/>
        </LinearLayout>

    </LinearLayout>

       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/llgloblestate"
           android:visibility="gone">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_14sdp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_15sdp"
                   android:text="Global State"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:id="@+id/totalparticipate"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_12sdp"
                   tools:text="10,790,842"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_9sdp"
                   android:textColor="@color/white"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:text="Total Participants"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:id="@+id/countries"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_12sdp"
                   tools:text="205"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_9sdp"
                   android:textColor="@color/white"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:text="Countries"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_6sdp"
                   android:background="@drawable/homerow_bg"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:id="@+id/totalstackpool"
                           tools:text="434,34,23423,3"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Stacked in Pool"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:gravity="end"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:id="@+id/totalstackedpoolusd"
                           tools:text="$4343,3434,00"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Statcked in Pool (USD)"/>
                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_6sdp"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:id="@+id/globetotalrewards"
                           tools:text="2,232,323,99"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Rewards"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:gravity="end"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:id="@+id/totalrewardsusd"
                           tools:text="$34,232,00"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Rewards (USD)"/>
                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_6sdp"
                   android:background="@drawable/homerow_bg"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:id="@+id/totalwithdraws"
                           tools:text="1,90,32,32,00"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Withdraws"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight=".5"
                       android:gravity="end"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:id="@+id/totalwithdrawusd"
                           tools:text="205"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_9sdp"
                           android:textColor="@color/white"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:text="Total Withdraws (USD)"/>
                   </LinearLayout>


               </LinearLayout>
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>


       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           app:tint="@color/white"
           android:id="@+id/dropdown"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/rltabtoearm">

        <TextView
            android:id="@+id/addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/purple_200"
            android:padding="10dp"
            android:text="Add Referral"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/stakemnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:drawableLeft="@drawable/logo24dp"
            android:drawablePadding="4dp"
            android:padding="10dp"
            android:text="Stake MNT"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/rltab"
            android:layout_below="@+id/stakemnt">
            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:alpha=".060"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"/>
            <TextView
                android:id="@+id/tabtoearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:text="Scratch to earn MMT"
                android:textStyle="bold"
                android:textColor="@color/lightgray"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>