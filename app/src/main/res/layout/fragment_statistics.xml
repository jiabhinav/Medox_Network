<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swiprefresh">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.home.Wallet">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:id="@+id/card1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_200"
                    android:drawablePadding="4dp"
                    android:id="@+id/funding"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:text="Your Staking"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_200"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:text="0 BLV"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:id="@+id/card2"
            android:layout_below="@+id/card1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_200"
                    android:textSize="@dimen/_14sdp"
                    android:drawablePadding="4dp"
                    android:id="@+id/textavailablerewards"
                    android:textStyle="bold"
                    android:text="Available Rewards"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_200"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:text="0 BLV"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_200"
                    android:textSize="@dimen/_9sdp"
                    android:layout_below="@+id/textavailablerewards"
                    android:text="Multi-level Marketing (MLM) or network marketing, is individuals selling products to the public - often by word of mouth and direct sales."/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:id="@+id/card3"
            android:layout_below="@+id/card2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_200"
                    android:textSize="@dimen/_14sdp"
                    android:drawablePadding="4dp"
                    android:id="@+id/reward"
                    android:textStyle="bold"
                    android:text="Maximum Rewards"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_200"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:text="0 BLV"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/round_button_wallet"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_withdraw"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/purple_200"
                    android:text="Withdraw"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_200"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/round_button_wallet"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_deposit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:text="Withdraw"/>

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
