<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swiprefresh">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.home.Wallet">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:id="@+id/card1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                >
                <RelativeLayout
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:background="@drawable/bottom_cornor"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="@dimen/_5sdp"
                        android:ems="4"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:text="up-time"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_500"
                    android:textStyle="bold"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/name"
                    android:layout_below="@+id/view"
                    tools:text="Sekh Hossain"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_500"
                    android:drawablePadding="4dp"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/mobile"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
                    tools:text="+919939282323"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:text="F3Wkit"
                    android:id="@+id/username"
                    android:layout_below="@+id/view"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="visible"

            android:layout_below="@+id/card1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:backgroundTint="@color/purple_200"
                android:orientation="vertical"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:id="@+id/lltotalteam"
                android:background="@drawable/round_cornor2">
                <TextView
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:id="@+id/totalmember"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:text="@string/total_team_members"
                    android:id="@+id/totalteammembers"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_200"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:background="@drawable/round_cornor2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_2sdp"
                    android:id="@+id/directmemeber"
                    android:text="0"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:text="Direct Members"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="visible"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/referral"
                android:foreground="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/round_button_wallet"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_200"
                    android:src="@drawable/ic_baseline_person_add_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/purple_200"
                    android:text="Add Referral"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_200"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:foreground="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/llteamlevel"
                android:background="@drawable/round_button_wallet"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/ic_baseline_dehaze_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:text="@string/team_levels"/>

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
